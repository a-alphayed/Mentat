{
  "metadata": {
    "version": "1.0.0",
    "created": "2025-01-31",
    "description": "SuperClaude Hooks System Configuration",
    "author": "SuperClaude Framework"
  },
  "hooks": {
    "framework_coordinator": {
      "name": "Framework Coordinator Hook",
      "description": "Central intelligence for SuperClaude framework coordination",
      "priority": "critical",
      "events": ["PreToolUse", "PostToolUse"],
      "tools": "*",
      "timeout_ms": 5000,
      "retry_attempts": 2,
      "enabled": true,
      "configuration": {
        "auto_activation": {
          "enabled": true,
          "confidence_threshold": 0.7,
          "mcp_server_suggestions": true
        },
        "compliance_validation": {
          "enabled": true,
          "rules_checking": true,
          "warnings_only": false
        },
        "orchestrator_routing": {
          "enabled": true,
          "pattern_matching": true,
          "resource_zone_awareness": true
        }
      }
    },
    "session_lifecycle": {
      "name": "Session Lifecycle Hook",
      "description": "Automatic session management and checkpoints",
      "priority": "high",
      "events": ["SessionStart", "PostToolUse"],
      "tools": "*",
      "timeout_ms": 3000,
      "retry_attempts": 1,
      "enabled": true,
      "configuration": {
        "auto_load": {
          "enabled": true,
          "new_projects": true
        },
        "checkpoint_automation": {
          "enabled": true,
          "time_based": {
            "enabled": true,
            "interval_minutes": 30
          },
          "task_based": {
            "enabled": true,
            "high_priority_tasks": true
          },
          "risk_based": {
            "enabled": true,
            "major_operations": true
          }
        },
        "session_persistence": {
          "enabled": true,
          "cross_session_learning": true
        },
        "mcp_readiness_check": {
          "enabled": true,
          "critical_window_seconds": 10,
          "max_retry_attempts": 3,
          "retry_intervals": [1, 2, 3],
          "health_check_timeout": 5,
          "show_user_feedback": true,
          "cache_duration_seconds": 2
        }
      }
    },
    "quality_gates": {
      "name": "Quality Gates Hook",
      "description": "Systematic quality validation enforcement",
      "priority": "high",
      "events": ["PostToolUse"],
      "tools": ["Write", "Edit", "MultiEdit", "NotebookEdit"],
      "timeout_ms": 4000,
      "retry_attempts": 1,
      "enabled": true,
      "configuration": {
        "validation_triggers": {
          "write_operations": true,
          "edit_operations": true,
          "major_changes": true
        },
        "validation_steps": {
          "syntax_validation": true,
          "type_analysis": true,
          "lint_rules": true,
          "security_assessment": true,
          "performance_analysis": true,
          "documentation_check": true
        },
        "quality_thresholds": {
          "minimum_score": 0.8,
          "warning_threshold": 0.7,
          "auto_fix_threshold": 0.9
        }
      }
    },
    "performance_monitor": {
      "name": "Performance Monitor Hook",
      "description": "Real-time performance tracking and optimization",
      "priority": "medium",
      "events": ["PreToolUse", "PostToolUse"],
      "tools": "*",
      "timeout_ms": 1000,
      "retry_attempts": 1,
      "enabled": true,
      "configuration": {
        "metrics": {
          "execution_time": true,
          "resource_usage": true,
          "framework_compliance": true,
          "mcp_server_efficiency": true
        },
        "targets": {
          "hook_execution_ms": 100,
          "memory_operations_ms": 200,
          "session_load_ms": 500,
          "context_retention_percent": 90
        },
        "alerting": {
          "enabled": true,
          "threshold_violations": true,
          "performance_degradation": true
        }
      }
    }
  },
  "global_settings": {
    "performance_target_ms": 100,
    "graceful_degradation": true,
    "logging": {
      "enabled": true,
      "level": "INFO",
      "file": "${CLAUDE_HOME}/superclaude-hooks.log",
      "max_size_mb": 10,
      "backup_count": 3
    },
    "error_handling": {
      "retry_on_failure": true,
      "max_retry_attempts": 3,
      "exponential_backoff": true,
      "fail_silently": false
    },
    "security": {
      "input_validation": true,
      "path_sanitization": true,
      "execution_sandboxing": true,
      "resource_limits": {
        "max_execution_time_ms": 10000,
        "max_memory_mb": 256,
        "max_file_size_mb": 10
      }
    }
  },
  "mcp_coordination": {
    "enabled": true,
    "intelligent_routing": true,
    "server_selection": {
      "context7": {
        "auto_activate": ["library", "framework", "documentation"],
        "complexity_threshold": 0.3,
        "performance_weight": 0.8
      },
      "sequential": {
        "auto_activate": ["analysis", "debugging", "complex"],
        "complexity_threshold": 0.7,
        "performance_weight": 0.6
      },
      "magic": {
        "auto_activate": ["ui", "component", "frontend"],
        "complexity_threshold": 0.3,
        "performance_weight": 0.9
      },
      "serena": {
        "auto_activate": ["files>10", "symbol_ops", "multi_lang"],
        "complexity_threshold": 0.6,
        "performance_weight": 0.7
      },
      "morphllm": {
        "auto_activate": ["pattern_edit", "token_opt", "simple_edit"],
        "complexity_threshold": 0.4,
        "performance_weight": 0.8
      },
      "playwright": {
        "auto_activate": ["testing", "browser", "e2e"],
        "complexity_threshold": 0.6,
        "performance_weight": 0.5
      }
    },
    "coordination_patterns": {
      "hybrid_intelligence": {
        "serena_morphllm": {
          "enabled": true,
          "conditions": ["complex_refactoring", "pattern_application"],
          "coordination_strategy": "serena_analyzes_morphllm_executes"
        },
        "sequential_context7": {
          "enabled": true,
          "conditions": ["framework_analysis", "documentation_needed"],
          "coordination_strategy": "context7_provides_sequential_analyzes"
        }
      }
    }
  },
  "framework_integration": {
    "superclaude_compliance": {
      "rules_enforcement": true,
      "principles_alignment": true,
      "orchestrator_coordination": true,
      "session_lifecycle_integration": true
    },
    "quality_gates_integration": {
      "step_1_syntax": "performance_monitor",
      "step_2_type_analysis": "framework_coordinator",
      "step_3_lint_rules": "quality_gates",
      "step_4_security": "quality_gates",
      "step_5_testing": "quality_gates",
      "step_6_performance": "performance_monitor",
      "step_7_documentation": "quality_gates",
      "step_8_integration": "framework_coordinator"
    },
    "command_integration": {
      "slash_commands": {
        "load": ["session_lifecycle"],
        "save": ["session_lifecycle"],
        "reflect": ["session_lifecycle"],
        "implement": ["framework_coordinator", "quality_gates"],
        "build": ["quality_gates", "performance_monitor"],
        "test": ["quality_gates"],
        "analyze": ["framework_coordinator", "performance_monitor"]
      }
    }
  },
  "installation": {
    "requirements": {
      "python_version": ">=3.8",
      "claude_code_version": ">=1.0.0",
      "required_modules": ["json", "pathlib", "logging", "time", "os", "sys", "re", "yaml"],
      "optional_modules": ["psutil", "requests"]
    },
    "deployment": {
      "target_directory": "${CLAUDE_HOME}/SuperClaude/Hooks",
      "backup_existing": true,
      "validate_after_install": true,
      "restart_required": true
    },
    "validation": {
      "file_integrity": true,
      "configuration_syntax": true,
      "python_imports": true,
      "performance_requirements": true,
      "claude_integration": true
    }
  }
}